<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center">

    <Chronometer
        android:layout_width="wrap_content"
        android:layout_height="75sp"
        android:textSize="60sp"
        android:textColor="@color/design_default_color_primary"
        android:id="@+id/chronometer_time"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/textView_playing_time_fragment"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_playing_time_fragment"
        android:text="Tempo de jogo em minutos e segundos"
        android:textColor="#550000"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>